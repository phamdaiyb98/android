<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#409A605B" />
            <corners android:radius="20dp" />
            <stroke android:color="#F1E25D" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#98D58A" />
                <corners android:radius="20dp" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#DC4B4B" />
                <corners android:radius="20dp" />
            </shape>
        </clip>
    </item>
</layer-list>

<!--Dùng thẻ clip để cắt progress và secondary cho progressBar-->
<!--viết code phải đúng thứ tự background - secondaryProgress - progress-->